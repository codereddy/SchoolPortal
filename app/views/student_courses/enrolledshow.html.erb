<% provide(:title, 'Enrolled students') %>
<h1>Listing Enrolled students</h1>

<div class="container" style="height:70vh; overflow:auto">

<table class="table">
  <thead>
    <th>Student</th>
    <th>Grade</th>
    <th>Status</th>
    <th></th>
  </thead>
  <tbody>
    <% @student_courses.each do |student_course| %>
    <% if  student_course !=nil %>
      <tr>
        <td><%= student_course.user.name %></td>
        <td><%= student_course.grade %></td>
        <td><%= student_course.status %></td>
        <td><%= link_to 'Show', student_course %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>

<br>
