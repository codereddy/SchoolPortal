<% provide(:title, 'Edit Grade') %>

<div class="center">
  <h3> Edit Grade </h3>
</div>
<div class='row'>
  <div class='col-md-6 col-md-offset-3'>

<%= form_for(@student_course) do |f| %>
      <% if @student_course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student_course.errors.count, "error") %> prohibited this student_course from being saved:</h2>

      <ul>
      <% @student_course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

      <%= f.label :course_id, "Course" %>
      <%= f.text_field :course_id, class:'form-control', readonly: true %>

      <%= f.label :user_id, "Student Name" %>
      <%= f.email_field :user_id, class:'form-control', readonly: true %>'

      <%= f.label :grade, "Grade" %><br> 

      <%= f.select(:grade, {}, {}, {class:'form-control'}) do %>
                <%=content_tag(:option, "A+", value: "A+") %>
                <%=content_tag(:option, "A", value: "A") %>
                <%=content_tag(:option, "A-", value: "A-") %>
                <%=content_tag(:option, "B+", value: "B+") %>
                <%=content_tag(:option, "B", value: "B") %>
                <%=content_tag(:option, "B-", value: "B-") %>
                <%=content_tag(:option, "C+", value: "C+") %>
                <%=content_tag(:option, "C", value: "C") %>
                <%=content_tag(:option, "C-", value: "C-") %>
                <%=content_tag(:option, "F", value: "F") %>
      <% end %> 

      <%= f.submit "Save", class:'btn btn-primary' %>

    <% end %>

