<p id="notice"><%= notice %></p>

<h1>Listing Student Courses</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Course</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_courses.each do |student_course| %>
    <% if  student_course !=nil %>
      <tr>
        <td><%= student_course.user.name %></td>
        <td><%= student_course.user.id %></td>
        <td><%= student_course.course.title %></td>
        <td><%= student_course.grade %></td>
        <td><%= link_to 'Show', student_course %></td>
        <td><%= link_to 'Edit', edit_student_course_path(student_course) %></td>
        <td><%= link_to 'Destroy', student_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

