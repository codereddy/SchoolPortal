<% provide(:title, @user.name + '\'s profile') %>

<div class="row">
  	<div class="col-md-6 col-md-offset-3">

  		<% if @user.email == current_user.email%>
  			<h3> Your profile </h3>
  		<% else %>
  			<h3> <%= @user.name %>'s profile </h3>
  		<% end %>
		<table class="table">
			<tr>
				<td>Name</td>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<td>Email</td>
				<td><%= @user.email %></td>
			</tr>
			<tr>
				<td>Phone number</td>
				<td><%= @user.ph_number %></td>
			</tr>
			<tr>
				<td>Address</td>
				<td><%= @user.address %></td>
			</tr>
		</table>
		<br/>
		<% if current_user.email == @user.email %>
			<%= link_to "Edit Profile", edit_user_path(@user) %>
		<% end %>
		<% if current_user.utype == "admin" && current_user.email != @user.email%>
			<%= link_to 'Delete User', @user, method: :delete, data: {confirm: 'Are you sure?'} %> 
		<% end %>
	</div>
</div>