
<div class="center">
<h1>Welcome <%= @user.name %> (<%= @user.email %>, <%= @user.utype %>)</h1>
</div>

<div class="row">
  	<div class="col-md-4 col-md-offset-3">

  		<h3> Your profile </h3>
		<table class="table">
			<tr>
				<td>Name</td>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<td>Email</td>
				<td><%= @user.email %></td>
			</tr>
			<tr>
				<td>Phone number</td>
				<td><%= @user.ph_number %></td>
			</tr>
			<tr>
				<td>Address</td>
				<td><%= @user.address %></td>
			</tr>
		</table>
		<br/>
		<%= link_to "Edit Profile", edit_user_path(@user) %>
	</div>
</div>