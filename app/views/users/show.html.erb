<% provide(:title, @user.name + '\'s profile') %>

<div class="center">
<h1>Welcome <%= current_user.name %> (<%= current_user.email %>, <%= current_user.utype %>)</h1>
</div>

<div class="row">
  	<div class="col-md-4 col-md-offset-3">

  		<% if @user.email == current_user.email%>
  			<h3> Your profile </h3>
  		<% else %>
  			<h3> <%= @user.name %>'s profile </h3>
  		<% end %>
		<table class="table">
			<tr>
				<td>Name</td>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<td>Email</td>
				<td><%= @user.email %></td>
			</tr>
			<tr>
				<td>Phone number</td>
				<td><%= @user.ph_number %></td>
			</tr>
			<tr>
				<td>Address</td>
				<td><%= @user.address %></td>
			</tr>
		</table>
		<br/>
		<%= link_to "Edit Profile", edit_user_path(@user) %>
	</div>
</div>