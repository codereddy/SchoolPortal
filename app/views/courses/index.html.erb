<p id="notice"><%= notice %></p>

<h1>Listing All Courses</h1>

<%= form_tag(courses_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Courses" %>
<select id="searchby" name="searchby"><option>title</option><option>description</option><option>instructor</option><option>status</option></select>
<%= submit_tag "Search" %>
<% end %>


<table class="table">
  <thead>
    <th>Course</th>
    <th>Description</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Intructor</th>
    <th>Status</th>
    <th></th>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title%></td>
        <td><%= course.description %></td>
        <td><%= course.start_date %></td>
        <td><%= course.end_date %></td>
        <td><%= course.user.name%></td>
        <td><%= course.status%></td> 
        <td><%= link_to 'Show', course %></td>
        <% if ( current_user.utype =="admin")%>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
