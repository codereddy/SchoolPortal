<div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h3> Course Details </h3>
      <% if ( current_user.utype =="admin" ||  current_user.utype =="instructor" )%>
      <h5> <%=  link_to "List of Enrolled students",  controller: "student_courses", action: "enrolledshow", id:@course %> || <%=  link_to "List of Pending students", "#" %><h5>
      <% elsif(current_user.utype=="student") %>
         <%=  link_to "Enroll Me", "#" %>
      <% end %>
      <table class="table">
      <tr>
        <td>Title:</td>
        <td><%= @course.title %></td>
      </tr>
      <tr>
        <td>Description:</td>
        <td><%= @course.description %></td>
      </tr>
      <tr>
        <td>Start date:</td>
        <td><%= @course.start_date  %></td>
      </tr>
      <tr>
        <td>End date:</td>
        <td><%= @course.end_date %></td>
      </tr>
      <tr>
        <td>Instructor:</td>
        <td><%= @course.user.name %> </td>
      </tr>
      <tr>
        <td>Status:</td>
        <td><%= @course.status %></td>
      </tr>      
    </table>
    <br/>

      <%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
    
  </div>
</div>




