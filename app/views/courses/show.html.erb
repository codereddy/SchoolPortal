<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <h3> Course Details </h3>
        <% if ( current_user.utype =="admin" ||  current_user.utype =="instructor" )%>
            <h5> <%=  link_to "List of Enrolled students",  controller: "student_courses", action: "enrolledshow", id:@course, class:'form-control' %> | <%=  link_to "List of Pending students" ,controller: "student_courses",action: "pendingshow", id:@course, class:'form-control' %></h5>
        <% elsif(current_user.utype=="student") %>
            <h5> <%=  link_to "Enroll Me",:controller=>:courses, :action=>:enroll, :id=>@course.id, class:'form-control' %> <h5>
        <% end %>
        
        <table class="table">
            <tr>
                <td>Title:</td>
                <td><%= @course.title %></td>
            </tr>
            <tr>
                <td>Description:</td>
                <td><%= @course.description %></td>
            </tr>
            <tr>
                <td>Start date:</td>
                <td><%= @course.start_date  %></td>
            </tr>
                <tr>
                <td>End date:</td>
                <td><%= @course.end_date %></td>
            </tr>
                <tr>
                <td>Instructor:</td>
                <td><%= @course.user.name %> </td>
            </tr>
            <tr>
                <td>Status:</td>
                <td><%= @course.status %></td>
            </tr>      
        </table>
        <br/>

        <% if ( current_user.utype =="admin")%>
            <h5><%= link_to 'Edit', edit_course_path(@course)%> </h5>
        <% end %> 

        <br/>
        <h3>Announcements</h3>
        <% @course_announcements.each do |announcement| %>
            <div class="panel panel-default">
            <div class="panel-heading">

                <div style="text-align: left">
                    <%= announcement.title %>
                    <span style="float:right">
                    <i>Posted at: <%= announcement.created_at.strftime("%H:%M %m-%d-%y ") %></i>
                    </span>
                </div>

            </div>
            <div class="panel-body">
                <%= announcement.content %>
            </div>
            </div>
            <br/>
        <% end %>
    
  </div>
</div>




